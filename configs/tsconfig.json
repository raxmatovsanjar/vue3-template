{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"baseUrl": "../",
		"paths": {
			"@*": ["../src/*"]
		},
		"types": ["vite/client"]
	},
	"include": ["../src/**/*.ts", "./.eslintrc.js"],
	"exclude": ["../node_modules", "../dist", "../public"]
}
